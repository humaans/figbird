{
  "name": "figbird",
  "version": "0.20.0-3",
  "description": "Effortless realtime data management for React + Feathers applications.",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    },
    "./*": {
      "require": "./dist/cjs/*.js",
      "import": "./dist/esm/*.js"
    }
  },
  "scripts": {
    "test": "eslint && prettier --check '**/*.{js,css,yml}' && nyc ava",
    "format": "prettier --write '**/*.{js,css,yml}'",
    "coverage": "nyc --reporter=html ava",
    "build": "node ./tasks/build.js",
    "watch": "node ./tasks/build.js -w",
    "release": "np",
    "release:beta": "np --tag=beta",
    "docs:build": "hugo -s docs",
    "docs:watch": "hugo server -s docs",
    "docs:release": "hugo -s docs && gh-pages -d docs/public"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "Humaans",
  "license": "ISC",
  "dependencies": {
    "sift": "^17.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@swc-node/register": "^1.10.10",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.11.29",
    "ava": "^6.3.0",
    "browserslist-config-baseline": "^0.4.0",
    "eslint": "^9.27.0",
    "eslint-plugin-react": "^7.37.5",
    "execa": "^9.6.0",
    "gh-pages": "^6.3.0",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "nyc": "^17.1.0",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "sideEffects": false,
  "ava": {
    "serial": true,
    "files": [
      "test/*.test.js"
    ],
    "nodeArguments": [
      "--import=@swc-node/register/esm-register"
    ],
    "require": [
      "./test/setup.js"
    ]
  },
  "np": {
    "releaseDraft": false
  }
}
